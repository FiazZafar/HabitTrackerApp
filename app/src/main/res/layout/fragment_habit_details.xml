<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_habit_details.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Habit Title -->
    <TextView
        android:id="@+id/text_habit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Chart for tracking progress -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/progressChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"/>

    <!-- Progress log list (RecyclerView or ListView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

    <!-- Button to add a progress entry -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"/>
</LinearLayout>
